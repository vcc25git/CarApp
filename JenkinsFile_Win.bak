pipeline {
	agent any
	
	stages {
		stage('Checkout'){
			steps {
				git 'https://github.com/vcc25git/CarApp.git'
			}
		}
		stage('Build'){
			steps {
				bat 'mvn clean compile'
			}
		}
		
		stage('Code Analysis') {
			steps {
			 
				withSonarQubeEnv(installationName: 'sonarqube', credentialsId: 'SonarToken') {
				bat(script: 'C://Sonar//sonar-scanner//bin//sonar-scanner -Dproject.settings=sonar-project.properties’, label: ‘SonarQube Analysis')
			}
			}
		}
		
		stage('SonarQube analysis') {

			environment {
				scannerHome = tool 'sonarqube' // the name you have given the Sonar Scanner (in Global Tool Configuration)
			}
			steps {
				withSonarQubeEnv(installationName: 'SonarQube') {
				sh "${scannerHome}/bin/sonar-scanner -X"
				}
			}
		}
		
		
		stage('Testing'){
			steps {
			 	bat 'test'
			 	junit '**/target/surefire-reports/TEST-*.xml'
			 }
		}

		stage('Package') {
			steps {
				bat 'mvn package'
			}
		}		
	}
}